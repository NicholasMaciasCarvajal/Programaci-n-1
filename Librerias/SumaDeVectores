#include <stdio.h>
int main(){
    int vec1[4],vec2[4],vecr[4],i;
    for(i= 0 ; i<4 ; i++){
        printf("Dame un vector \n");
        scanf("%d", &vec1[i]);
    }
    for(i= 0 ; i<4 ; i++){
        printf("Dame un vector 2 \n");
        scanf("%d", &vec2[i]);
    }
    i=0;
    while(i<4){
        vecr[i] = vec1[i] + vec2[i];
        printf("El vecr %d \n", vecr[i]);
        i++;
    }
    return 0;
}
